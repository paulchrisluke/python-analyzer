{
  "name": "cranberry-auth-worker",
  "version": "1.0.0",
  "description": "Authentication service for Cranberry Hearing & Balance Center business sale",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute cranberry-auth-db --file=./db/migrations/0000_sharp_guardsmen.sql",
    "db:migrate:remote": "wrangler d1 execute cranberry-auth-db --file=./db/migrations/0000_sharp_guardsmen.sql --remote",
    "db:init": "node scripts/init-local-db.js",
    "db:hash": "node scripts/generate-password-hash.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:ci": "playwright test --reporter=github",
    "test:report": "playwright test && cd playwright-report-optimized && node server.js"
  },
  "keywords": [
    "cloudflare-workers",
    "better-auth",
    "authentication",
    "business-sale"
  ],
  "author": "Cranberry Hearing & Balance Center",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-table": "^8.21.3",
    "@types/dompurify": "^3.0.5",
    "argon2": "^0.44.0",
    "better-auth": "^1.3.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.400.0",
    "next": "^15.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^2.15.4",
    "scrypt-js": "^3.0.1",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "vaul": "^1.1.2",
    "zod": "^4.1.5"
  },
  "optionalDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.0.0",
    "@types/react": "19.1.12",
    "autoprefixer": "^10.0.1",
    "bcryptjs": "^2.4.3",
