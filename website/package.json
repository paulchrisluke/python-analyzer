{
  "name": "cranberry-auth-worker",
  "version": "1.0.0",
  "description": "Authentication service for Cranberry Hearing & Balance Center business sale",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "deploy": "wrangler deploy",
    "build:pages": "opennextjs-cloudflare build",
    "preview:pages": "opennextjs-cloudflare preview",
    "deploy:pages": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute cranberry-auth-db --file=./db/migrations/0000_sharp_guardsmen.sql",
    "db:migrate:remote": "wrangler d1 execute cranberry-auth-db --file=./db/migrations/0000_sharp_guardsmen.sql --remote",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:ci": "playwright test --reporter=github"
  },
  "keywords": [
    "cloudflare-workers",
    "better-auth",
    "authentication",
    "business-sale"
  ],
  "author": "Cranberry Hearing & Balance Center",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "better-auth": "^1.3.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.400.0",
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250906.0",
    "@opennextjs/cloudflare": "^1.8.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.1",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.4",
    "wrangler": "^4.34.0"
  }
}
